extends layout

block content
  h1 Browser Wars!
  div#instructions
    p Movement: Arrow Keys or WASD
    p Shoot: Space or Shift
    div.btn-group
      div.btn#muteMusic(data-toggle="button") Mute Music
      div.btn#muteSounds(data-toggle="button") Mute Sounds
  audio(id='theme',loop)
    source(src='/audio/standard.ogg',type='audio/ogg')
    source(src='/audio/standard.wav',type='audio/wav')
    source(src='/audio/standard.mp3',type='audio/mp3')
    source(src='/audio/standard.m4a',type='audio/m4a')
  audio(id='trouble',loop)
    source(src='/audio/fight.ogg',type='audio/ogg')
    source(src='/audio/fight.wav',type='audio/wav')
    source(src='/audio/fight.mp3',type='audio/mp3')
    source(src='/audio/fight.m4a',type='audio/m4a')
  audio(id='shoot')
    source(src='/audio/shoot.ogg',type='audio/ogg')
    source(src='/audio/shoot.wav',type='audio/wav')
  audio(id='enemyShoot')
    source(src='/audio/enemy-shoot.ogg',type='audio/ogg')
    source(src='/audio/enemy-shoot.mp3',type='audio/mp3')
    source(src='/audio/enemy-shoot.m4a',type='audio/m4a')
    source(src='/audio/enemy-shoot.wav',type='audio/wav')
  audio(id='explode')
    source(src='/audio/explode.ogg',type='audio/ogg')
    source(src='/audio/explode.wav',type='audio/wav')
  div#cavasDiv.overlay
    canvas(z-index='1')#coverScreen
    canvas(z-index='2')#gameScreen
